<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <% if dose.persisted? %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to "Delete", dose_path(dose), method: :delete %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= render 'doses/form' %>

<%= link_to "Back", root_path %>
