<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    </li>
    <%= link_to "Delete", dose_path(dose), method: :delete %>
  <% end %>
</ul>

<%= render 'doses/form' %>

<%= link_to "Back", root_path %>
